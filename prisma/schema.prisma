generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "cockroachdb"
  url          = env("COCKROACH_DB_URL")
  relationMode = "prisma"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  providerAccountId String
  access_token      String? 
  expires_at        Int?
  id_token          String? 
  provider          String
  refresh_token     String? 
  scope             String?
  session_state     String?
  token_type        String?
  type              String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  expires      DateTime
  sessionToken String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Item {
  id           String     @id @default(cuid())
  name         String
  src          String     
  price        Float
  alt          String
  stock        Int
  description  String    
  length       Float
  width        Float
  height       Float
  weight       Float
  discontinued Boolean
  isOriginal   Boolean  @default(false)
  category     String
  CartItem     CartItem[]
  inventories  Inventory[]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  Account       Account[]
  Session       Session[]
  Cart          Cart?
  orders        Order[]
}

model Cart {
  id     String     @id @default(uuid())
  userId String
  items  CartItem[]
  User   User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

model CartItem {
  id       String @id @default(cuid())
  itemId   String
  item     Item   @relation(fields: [itemId], references: [id])
  quantity Int
  Cart     Cart   @relation(fields: [cartId], references: [id])
  cartId   String

  @@index([cartId])
  @@index([itemId])
  @@unique([cartId, itemId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


model Order {
  id         String      @id @default(uuid())
  userId     String      
  createdAt  DateTime    @default(now())          // timestamp of placement
  status     String      @default("PENDING")     // e.g. PENDING, COMPLETED, CANCELED
  totalCents Int         // store money as integer cents to avoid float issues

  items      OrderItem[]                              // line-items
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([userId, createdAt])

}

model OrderItem {
  id           String   @id @default(uuid())
  orderId      String
  itemId       String
  quantity     Int
  priceCents   Int      // snapshot of price *at* purchase time
  description  String   // optional: snapshot of name/description
  src          String   // optional: snapshot of image URL

  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}
/// prisma/schema.prisma

model Inventory {
  id             String      @id @default(uuid())
  itemId         String
  onHand         Int         @default(0)          // available stock
  reserved       Int         @default(0)          // stock allocated to unpaid orders
  threshold      Int         @default(10)     // when to trigger restock
  restockAmount  Int         @default(50)     // how many to add
  lastAdjustedAt DateTime    @updatedAt            // when onHand or reserved last changed

  item           Item        @relation(fields: [itemId], references: [id], onDelete: Cascade)

  /// audit log of all adjustments
  transactions   InventoryTransaction[]

  @@unique([itemId])
}

model InventoryTransaction {
  id            String      @id @default(uuid())
  inventoryId   String
  change        Int         // positive to add, negative to remove
  type          String      // e.g. "SALE", "RESTOCK", "CANCEL", "ADJUSTMENT"
  reference     String?     // e.g. orderId or admin-adjustment note
  createdAt     DateTime    @default(now())

  inventory     Inventory   @relation(fields: [inventoryId], references: [id], onDelete: Cascade)

  @@index([inventoryId, createdAt])
}

model LoadRun {
  id            String            @id @default(uuid())
  userEmail     String            // who kicked it off
  numSessions   Int
  numOrders     Int
  startTime     DateTime          @default(now())
  endTime       DateTime?         
  cancelled     Boolean @default(false)
  summaries     LoadRunSummary[]  @relation("LoadRunToSummary")
}

model LoadRunSummary {
  id              String    @id @default(uuid())
  run             LoadRun   @relation("LoadRunToSummary", fields: [runId], references: [id], onDelete: Cascade)
  runId           String
  username        String
  ordersCompleted Int
  startTime       DateTime
  endTime         DateTime
}

